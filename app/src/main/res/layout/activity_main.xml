<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@mipmap/b3"
    android:orientation="vertical"
    tools:context="cn.edu.nuc.dreamygf.MainActivity">
    <Button
        android:id="@+id/btn_quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/quit_btn"
        android:textColor="#FF00FF"
        android:text="退出登录" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="幻想女友"

        android:textAlignment="gravity"
        android:textColor="#5CACEE"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"

        >

        <Button
            android:id="@+id/btn_chat"
            style="@style/btn_menu1"
            android:background="@drawable/common_btn"
            android:text="陪我聊天" />

        <Button
            android:id="@+id/btn_gobang"
            style="@style/btn_menu1"
            android:background="@drawable/common_btn"
            android:text="下五子棋"
            />

        <Button
            android:id="@+id/btn_dance"
            style="@style/btn_menu1"
            android:background="@drawable/common_btn"
            android:text="看你跳舞"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_face"
            style="@style/btn_menu2"
            android:background="@drawable/common_btn"
            android:text="颜值评测"
            />

        <Button
            android:id="@+id/btn_alarm"
            style="@style/btn_menu2"
            android:background="@drawable/common_btn"
            android:text="叫我起床"

            />

        <Button
            android:id="@+id/btn_code"
            style="@style/btn_menu2"
            android:background="@drawable/common_btn"
            android:text="专属女友"

            />
    </LinearLayout>

    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/btn_share"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:background="@drawable/share_btn"
        android:text="分享幻想女友" />
</LinearLayout>
