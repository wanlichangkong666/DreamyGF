<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/snow4"
    android:orientation="vertical"
    tools:context="cn.edu.nuc.dreamygf.WelcomeActivity">

    <!--<TextView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="150dp"-->
    <!--android:gravity="center"-->
    <!--android:text="幻想女友"-->
    <!--android:background="@mipmap/theme"-->
    <!--android:textAlignment="gravity"-->
    <!--android:textColor="#FF34B3"-->
    <!--android:textSize="40sp" />-->
    <ImageView
        android:layout_width="320dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/ww3"
        android:src="@drawable/tt5" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:stretchColumns="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="用户名"
                android:background="@mipmap/hj1"
                android:textColor="#FF34B3"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:background="@mipmap/fff1"
                android:hint="在此输入用户名"
                android:textColor="#EE00EE" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="密码"
                android:background="@mipmap/hj1"
                android:textColor="#FF34B3"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@mipmap/fff1"
                android:hint="在此输入密码"
                android:gravity="center"
                android:inputType="textPassword"
                android:textColor="#EE00EE" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/btn_register"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@mipmap/ff9"
        android:gravity="center"
        android:text="注    册"
        android:textColor="#FF34B3"
        android:textSize="20sp" />


    <Button
        android:id="@+id/btn_login"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@mipmap/ff9"
        android:gravity="center"
        android:text="登    录"
        android:textColor="#FF34B3"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_quit_app"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@mipmap/ff9"
        android:gravity="center"
        android:text="退    出"
        android:textColor="#FF34B3"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right"
        android:text="作者：王翔宇"
        android:textColor="#0000FF" />
</LinearLayout>
